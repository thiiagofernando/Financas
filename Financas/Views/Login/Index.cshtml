@{
    ViewBag.Title = "Login";
}
<form action="@Url.Action("Autentica")" method="post">
    @Html.ValidationMessage("login.Invalido","", new { @class = "text-danger" })
    <br />
    <label for="login">Login</label>
    <input id="login" name="login" type="text" class="form-control"/>
    <br />
    <label for="senha">Senha</label>
    <input id="senha" name="senha" type="password" class="form-control"/>
    <br />
    <input type="submit" value="Autenticar" class="btn btn-success"/>
    
</form>